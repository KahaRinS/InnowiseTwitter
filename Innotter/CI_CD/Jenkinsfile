pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                image 'python:3.11-alpine'
                args "--user root --privileged"
                }
            }
            stages {
                stage('Install dependencies') {
                    steps {
                        sh 'pip install -U pipenv'
                        sh 'pipenv install --system'
                    }
                }
            }
        }
    }
}

